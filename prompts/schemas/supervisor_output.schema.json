{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SupervisorOutput",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "status",
    "summary",
    "checks",
    "fix_plan"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL"
      ]
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "status",
          "command",
          "notes",
          "errors"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "PASS",
              "FAIL",
              "SKIP"
            ]
          },
          "command": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "fix_plan": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "priority",
          "title",
          "files",
          "instructions",
          "retest"
        ],
        "properties": {
          "priority": {
            "type": "integer",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "instructions": {
            "type": "string",
            "minLength": 1
          },
          "retest": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}